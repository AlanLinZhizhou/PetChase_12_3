<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_background7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="serif"
                    android:text="  宠物之家"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="italic|bold" />
                <!--<ImageView-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:background="@drawable/home_title2"-->
                <!--android:scaleType="centerInside" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"

                    android:layout_toLeftOf="@+id/hometitle2"
                    android:background="@drawable/ic_personal_tab_custom_topic2" />

                <TextView
                    android:id="@+id/hometitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical"
                    android:text="  智能生活    "
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="        众里寻它    千百度"
            android:textColor="#ffffff"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.SearchView
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:autofillHints="输入用户、帖子名称"
                android:background="@drawable/shape_yuanjiao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/bannerLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_yuanjiao2"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_yuanjiao"
                app:delay_time="3500"
                app:indicator_drawable_selected="@drawable/shape_home_banner_selected"
                app:indicator_drawable_unselected="@drawable/shape_home_banner_unselected"
                app:indicator_height="@dimen/dp_6"
                app:indicator_margin="@dimen/dp_6"
                app:indicator_width="@dimen/dp_6"
                app:is_auto_play="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="vertical" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_line" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:columnCount="5"
        android:rowCount="4"
        android:useDefaultMargins="true">


        <ImageButton
            android:id="@+id/bind_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#00000000"
            app:srcCompat="@drawable/bind_device" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="绑定设备"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#00000000"
            app:srcCompat="@drawable/kepu" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="小科普"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#00000000"
            app:srcCompat="@drawable/find_pet3" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="发布"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#00000000"
            app:srcCompat="@drawable/device_info" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="寻宠启示"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="#00000000"
            app:srcCompat="@drawable/safe_room" />

        <TextView
            android:id="@+id/text41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="设备信息"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#00000000"
            app:srcCompat="@drawable/award" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="抽奖"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#00000000"
            app:srcCompat="@drawable/contact_us" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="联系我们"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#00000000"
            app:srcCompat="@drawable/vaccinum" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="疫苗规划"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button81"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#00000000"
            app:srcCompat="@drawable/recharge" />

        <TextView
            android:id="@+id/text81"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="网卡"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_row="2"
            android:background="#00000000"
            app:srcCompat="@drawable/find_more" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="更多"
            android:textSize="12sp" />
    </GridLayout>


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_line" />

    <LinearLayout
        android:id="@+id/temp_Li"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ffffff"
        android:orientation="vertical" />


    <RelativeLayout
        android:id="@+id/btmLinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/btm_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_yuanjiao2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/btm_bac3" />
    </RelativeLayout>
</LinearLayout>
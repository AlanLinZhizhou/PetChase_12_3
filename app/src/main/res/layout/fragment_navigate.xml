<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="0dp"
    >

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宠物追踪"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>
    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/grey_line" />

    <FrameLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#00000000"

        >


        <com.amap.api.maps.MapView
            android:id="@+id/fragment_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.amap.api.maps.MapView>
        <ToggleButton
            android:id="@+id/tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:textOn="普通模式"
            android:textOff="夜间模式"
            android:checked="true"
            />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/xxxx"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#00000000"
        >

        <ImageButton
            android:id="@+id/drive_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:background="#00000000"
            app:srcCompat="@drawable/drive_navi"

            />
        <ImageButton
            android:id="@+id/btn_cycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/drive_navi"
            android:layout_marginBottom="1dp"
            android:background="#00000000"
            app:srcCompat="@drawable/btn_cycling"

            />

        <ImageButton
            android:id="@+id/walt_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="1dp"
            android:layout_toLeftOf="@+id/btn_cycling"
            android:background="#00000000"

            app:srcCompat="@drawable/walk_navi" />
    </RelativeLayout>

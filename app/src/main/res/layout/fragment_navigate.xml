<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="0dp"
    >

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        >

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_daily_vote_up"

            />

    </RelativeLayout>
    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/grey_line" />

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"

        >


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/multi" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/font" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/isw_dingwei" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_line" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:background="#00000000"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_gravity="center_horizontal"
        >

        <ImageButton
            android:id="@+id/drive_navi"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/drive_navi" />

        <ImageButton
            android:id="@+id/btn_cycling"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/btn_cycling" />
        <ImageButton
            android:id="@+id/walt_navi"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/walk_navi" />

    </GridLayout>


</LinearLayout>